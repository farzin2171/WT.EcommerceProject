@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}
    <div class="login-form">
        <form asp-controller="Auth" asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="Username" required="required" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
            <div class="clearfix">
                <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
                <a href="#" class="float-right">Forgot Password?</a>
            </div>
        </form>
        <p class="text-center"><a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create an Account</a></p>
    </div>

