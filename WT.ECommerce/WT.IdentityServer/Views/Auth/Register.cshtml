@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-form">
    <form asp-controller="Auth" asp-action="Register" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <h2 class="text-center">Register</h2>
        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Username" required="required" />
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required="required" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
    </form>
    
</div>


